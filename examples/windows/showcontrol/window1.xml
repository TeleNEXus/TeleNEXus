<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <Frame>
      <layout>
        <LayoutHBox>
          <layouts>
            <LayoutVBox>
              <widgets>

                <Button text="Show Window 1 normal">
                  <press>
                    <controlWindow windowId="Win2" action="show(normal)"/>
                  </press>
                </Button>

                <Button text="Show Window 1 full screen">
                  <press>
                    <controlWindow windowId="Win2" action="show(fullScreen)"/>
                  </press>
                </Button>

                <Button text="Show Window 1 minimized">
                  <press>
                    <controlWindow windowId="Win2" action="show(minimized)"/>
                  </press>
                </Button>

                <Button text="Show Window 1 maximized">
                  <press>
                    <controlWindow windowId="Win2" action="show(maximized)"/>
                  </press>
                </Button>

                <Button text="Hide Window 2">
                  <press>
                    <controlWindow windowId="Win2" action="hide"/>
                  </press>
                </Button>

              </widgets>
              <stretch/>
            </LayoutVBox>
          </layouts>
          <stretch/>
        </LayoutHBox>
      </layout>
    </Frame>
  </mainWidget>
</WINDOW>


