      <!-- <controlWindow windowId="Win1" action="show(maximized)"/> --> 
      <!-- <controlWindow windowId="Win1" action="hide"/> --> 
    </press>

    <release>
      <!-- mouse release event -->
      <!-- ********** -->
    </release>

    <show>
      <!-- widget show event -->
      <!-- ********** -->
