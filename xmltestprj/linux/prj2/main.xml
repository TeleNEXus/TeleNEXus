<?xml version="1.0" encoding="UTF-8" ?>

<APPLICATION>

    <PLAGINPATHS>
        <item path="./libs"/>
    </PLAGINPATHS>



    <SOURCEBUILDERS file="sourcebuilders.xml"/>
    
    <SOURCES file="sources.xml"/>
    
    <LAYOUTBUILDERS>
        <layoutGrid     lib="basiclayouts" libhandler="getGridLayoutBuilder" />
        <layoutVBox     lib="basiclayouts" libhandler="getVBoxLayoutBuilder" />
        <layoutHBox     lib="basiclayouts" libhandler="getHBoxLayoutBuilder" />
    </LAYOUTBUILDERS>
    
    <WIDGETBUILDERS>
        <widget                 lib="basicwidgets" libhandler="getWidgetBuilder"                />
        <label                  lib="basicwidgets" libhandler="getTextLabelBuilder"             />
        <table                  lib="basicwidgets" libhandler="getTableWidgetBuilder"           />
        <dataLabel              lib="basicwidgets" libhandler="getRemLabelBuilder"              />
        <dataLineEdit           lib="basicwidgets" libhandler="getRemLineEditBuilder"           />
        <dataComboBox           lib="basicwidgets" libhandler="getRemComboBoxBuilder"           />
        <dataComboLabel         lib="basicwidgets" libhandler="getRemComboLabelBuilder"         />
        <tabs                   lib="basicwidgets" libhandler="getTabWidgetBuilder"             />
        <switchWidgetsList      lib="basicwidgets" libhandler="getSwitchWidgetsListBuilder"     />
        <controlWindowButton    lib="basicwidgets" libhandler="getControlWindowButtonBuilder"   />
        <scrollArea             lib="basicwidgets" libhandler="getScrollAreaBuilder"            />
        <dataWriteButton        lib="basicwidgets" libhandler="getRemWriteButtonBuilder"        />
    </WIDGETBUILDERS>

    <FONTS file="fonts.xml"/>
    <SCRIPTS file="scripts.xml"/>
    <FORMATTERS file="formatters.xml"/>
        
    <WINDOW id="win0" title="WINDOW 0" file="window.xml" show="normal"
      modes="stayOnTop=off; frameless=off" />

</APPLICATION>
