<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <Table
      styleTable  = "$(table1)"
      styleHeader = "$(table1Header)"
      styleCorner = "(...){background:yellow;}"
      >

      <col label="Data name">
        <Label text="bits_size(1)" /> 

        <Label text="bits_defs_1" /> 

        <Label text="bytes_uint8"   /> 
        <Label text="bytes_uint16"  /> 
        <Label text="bytes_uint32"  /> 
        <Label text="bytes_float32" /> 
        <Label text="test_string"  /> 

        <Label text="modbus hreg0"  /> 
        <Label text="modbus hreg1"  /> 

      </col>

      <col label="Data labels">
        <DataLabel      data="localsource:  bits_size(1)    :bits"/>

        <DataLabel      data="localsource:  bits_defs_1     :bits"/>

        <DataLabel      data="localsource:  bytes_uint8     :uint8"    />
        <DataLabel      data="localsource:  bytes_uint16    :uint16"   />
        <DataLabel      data="localsource:  bytes_uint32    :uint32"   />
        <DataLabel      data="localsource:  bytes_float32   :float32"  />
        <DataLabel      data="localsource:  test_string     :string"   />

        <DataLabel      data="qtslavetcp:  hreg0  :uint16"   />
        <DataLabel      data="qtslavetcp:  hreg1  :uint16"   />
      </col>

    </Table>
  </mainWidget>
</WINDOW>
