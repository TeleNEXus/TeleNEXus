                  <!--   <writeData data="localsource:test_string:string" value="press write string 3"/> -->
                  <!-- </release> -->

                </Button>

              </item>

              <item matching="item5">
                <Label text="Widget item 5" />
              </item>

              <item matching="item6">
                <Label text="Widget item 6" />
              </item>

            </StackWidget>

          </widgets>
        </Frame>
      </ScrollArea>


      <Frame>
        <layout>
          <LayoutVBox>
            <widgets>
              <Label    data="localsource:listwidgetitem:string" />
              <LineEdit data="localsource:listwidgetitem:string" />
              <Label    data="localsource:test_string:string" />
            </widgets>
            <stretch/>
          </LayoutVBox>
        </layout>
      </Frame>


    </SplitterHorizontal>

  </mainWidget>
