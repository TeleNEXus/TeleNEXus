<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <SplitterHorizontal>

      <ScrollArea style="(...){background:green; qproperty-alignment: AlignCenter;}">
        <Frame size="500;450" style="(...){}">
          <widgets>

            <StackWidget 
              position="100;100" style="(...){ color:yellow; background:red;}" data="localsource:listwidgetitem:string">

              <actions>
                <press>
                  <controlScript scriptId="testlaunch1" scriptAction="launch(500)"/>
                  <writeData data="localsource:test_string:string" value="press write string 2"/>
                </press>
                <release>
                    <controlScript scriptId="testlaunch1" scriptAction="stop"/>
                    <writeData data="localsource:test_string:string" value="press write string 3"/>
                </release>
              </actions>

              <itemUndef>
                <Label text="Undefined Item" />
              </itemUndef>

              <itemWrong>
                <Label text="Wrong Item" />
              </itemWrong>



              <item matching="item0">
                <Label text="Widget item 0" />
              </item>

              <item matching="item1">
                <Label data="localsource:listwidgetitem:string" />
              </item>

              <item matching="item2">
                <Label picture="file=picture/picture_1.png; size=(100,100)" />
              </item>

              <item matching="item3">
                <Label movie="movies/10_11_12_13.gif" />
              </item>

              <item matching="item0">

                <!-- <Button text="write data" style="$(buttonCrazy) (...){color:green}" icon="file='picture/icon1.png'; size=(150, 50)"> -->

                  <Button text="" style=
                    "(...){border-image: url(picture/picture_1.png)}
