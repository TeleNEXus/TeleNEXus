<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <SplitterHorizontal>

      <ScrollArea style="(...){background:green; qproperty-alignment: AlignCenter;}">
        <Frame size="500;450" style="(...){qproperty-alignment: AlignCenter;}">
          <widgets>

            <StackWidget 
              position="100;100" style="(...){ color:yellow; background:lightblue;}" data="localsource:listwidgetitem:string">

              <item matching="item0">
                <Label text="Widget item 0" />
              </item>

              <item matching="item1">
                <Label data="localsource:listwidgetitem:string" />
              </item>

              <item matching="item2">
                <Label picture="file=picture/picture_1.png; size=(100,100)" />
              </item>

              <item matching="item3">
                <Label movie="movies/10_11_12_13.gif" />
              </item>

              <item matching="item4">

                <Button text="write data" style="$(buttonCrazy) (...){color:green}" icon="file='picture/icon1.png'; size=(150, 50)">

                  <press>
                    <controlScript scriptId="testlaunch1" scriptAction="launch(500)"/>
                    <writeData data="localsource:test_string:string" value="press write string 2"/>
                  </press>

                  <release>
                    <controlScript scriptId="testlaunch1" scriptAction="stop"/>
                    <writeData data="localsource:test_string:string" value="press write string 2"/>
                  </release>

                </Button>

              </item>

              <item matching="item5">
                <Label text="Widget item 5" />
              </item>

              <item matching="item6">
                <Label text="Widget item 6" />
              </item>

            </StackWidget>

          </widgets>
        </Frame>
      </ScrollArea>


      <Frame>
        <layout>
          <LayoutVBox>
            <widgets>
              <Label    data="localsource:listwidgetitem:string" />
              <LineEdit data="localsource:listwidgetitem:string" />
            </widgets>
            <stretch/>
          </LayoutVBox>
        </layout>
      </Frame>


    </SplitterHorizontal>

  </mainWidget>
</WINDOW>



