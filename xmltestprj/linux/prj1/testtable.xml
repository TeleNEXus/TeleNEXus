<table
  bgColor="rgb(50,150,50)"
  bgColorHeader="rgb(50,50,150)"
  textColorHeader="lightgreen"
  fontHeader="bold 14pt"
  gridColor="yellow"
  >
  <col label="Столбец 1">
    <dataComboBox  read="hreg0" source="qtslavetcp" format="uint16">
      <item text="On"     value="010"/>
      <item text="Off"    value="011"/>
      <item text="Reset"  value="012"/>
      <item text="Test"   value="013"/>
    </dataComboBox>

    <dataComboBox  read="hreg0" source="qtslavetcp" format="hex" dataSize="2">
      <item text="On"        value="00_0 a"/>
      <item text="Off"       value="00_0 b"/>
      <item text="Reset"     value="00_0 c"/>
      <item text="Test"      value="00_0 d"/>
    </dataComboBox>

    <dataComboLabel  read="coil0" source="qtslavetcp" format="bool">
      <item text="Включен"        value="true"/>
      <item text="Выключен"       value="false"/>
    </dataComboLabel>



    <dataComboLabel  read="hreg0" source="qtslavetcp" format="hex" dataSize="2">
      <item text="On"        value="a"/>
      <item text="Off"       value="b"/>
      <item text="Reset"     value="c"/>
      <item text="Test"      value="d"/>
    </dataComboLabel>

    <dataComboBox  read="coil[0-3]" source="qtslavetcp" format="bits" dataSize="4">
      <item value="1 1_001"/>
      <item value="1 1_011"/>
      <item value="1 1_111"/>
    </dataComboBox>

    <dataComboLabel  read="coil[0-3]" source="qtslavetcp" format="bits" dataSize="4">
      <item text="1 1_001" value="1 1_001"/>
      <item text="1 1_011" value="1 1_011"/>
      <item text="1 1_111" value="1 1_111"/>
    </dataComboLabel>

    <dataLabel      source="qtslavetcp"  data="coil[0-2]" format="bits"/>

    <dataLineEdit   bgColor="red" source="qtslavetcp"  data="coil[0-2]" format="bits" dataSize="3" separator=" " />
  </col>

  <col label="Столбец 2">
    <dataLabel source="qtslavetcp"  data="coil[0-2]" format="hex"/>
    <dataLabel source="qtslavetcp"  data="hreg1" format="uint16"/>
    <dataLabel source="qtslavetcp"  data="hflt"  format="float32"/>
  </col>


  <col label="Столбец 3" width="200">
    <dataLineEdit   source="qtslavetcp" data="hreg[0-1]" format="hex" dataSize="4" separator=" "/>

    <dataComboLabel  read="hreg0" source="qtslavetcp" format="hex" dataSize="2">
      <item text="On"        value="a"/>
      <item text="Off"       value="b"/>
      <item text="Reset"     value="c"/>
      <item text="Test"      value="d"/>
    </dataComboLabel>

    <dataLabel      source="qtslavetcp"  data="hreg0"   format="bitfield"/>
    <dataLineEdit   source="qtslavetcp"  data="hreg0"   format="bitfield" size="2" separator=" "/>
    <dataLabel      source="qtslavetcp"  data="inreg1"  format="uint16"/>
    <dataLabel      source="qtslavetcp"  data="inflt"   format="float32"/>
    <dataLabel      source="qtslavetcp"  data="hreg1"   format="hex"/>
  </col>
  <row height="100">

    <dataLabel      source="qtslavetcp"  data="coil[0-2]" format="bits"/>
    <dataLabel      source="qtslavetcp"  data="coil[0-2]" format="bits"/>
      <dataComboLabel  read="hreg0" source="qtslavetcp" format="hex" dataSize="2" 
        bgColor="red" textColor="blue" fontId="mnemo10" 
        posx="250" posy="25"
        align="Right Bottom"
        >
        <!-- bgColor="red" textColor="blue" font="bold italic 25pt DejaVu Sans Mono" --> 
        <!-- minWidth="150" minHeight="150" -->
        <!-- <item text="UNDEFINED" mode="undef" fontId="mnemo18" align="Center"/> -->
        <!-- <item text="WRONG"     mode="wrong" fontId="mnemo18" align="Center"/> -->
        <item picture="movies/undef_150_100.gif" mode="undef" fontId="mnemo18" align="Center" bgColor="white"/>
        <item picture="movies/wrong_150_100.gif" mode="wrong" fontId="mnemo18" align="Center" bgColor="black"/>
        <!-- <item text="Test 1"   value="a" bgColor="blue" textColor="red" fontId="mnemo10" align="VCenter Left"/> -->
        <item text="Test 0"   value="a" textColor="yellow" bgColor="blue" fontId="mnemo18" align="Left VCenter" />
        <item text="Test 1"   value="b" />

        <item picture="movies/20_21_22_23.gif"        value="c" align="Center" bgColor="black"/>
        <item picture="picture/picture_150_100.png"   value="d" align="Center" bgColor="yellow"/>
        <item text="Test 4"   value="e"/>
        <item text="Test 5"   value="f"/>
        <item text="Test 6"   value="10"/>
        <item text="Test 7"   value="11"/>
        <item text="Test 8"   value="12"/>
      </dataComboLabel>
  </row>
  <col/>
</table>
