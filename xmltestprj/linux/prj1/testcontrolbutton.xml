<?xml version="1.0" encoding="UTF-8" ?>
<widget>
    <layout>
        <layoutVBox>
            <widgets>
                <button text="hide win0">
                  <press>
                    <window id="win0" event="pressed" action="hide"/>
                  </press>
                </button>

                <button text="hide win1 win2">
                  <press>
                    <window id="win1" event="pressed" action="hide"/>
                    <window id="win2" event="released" action="hide"/>
                  </press>
                </button>

                <button text="show win1 win2">
                  <press>
                    <window id="win1" event="pressed" action="show"/>
                    <window id="win2" event="released" action="show"/>
                  </press>
                </button>

                <label text="Label01" /> 
                <label text="Label02" /> 
                <label text="Label03" /> 
                <label text="Label04" /> 

            </widgets>
        </layoutVBox> 
    </layout>
</widget>
