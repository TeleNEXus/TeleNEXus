<?xml version="1.0" encoding="UTF-8" ?>

<switchWidgetsList>

    <item name="widget 1">
        <widget>
            <layout>
                <layoutVBox>
                    <widgets>
                        <label text="Label 1 widget 1" /> 
                        <label text="Label 2 widget 1" /> 
                    </widgets>
                </layoutVBox>
            </layout>
        </widget>
    </item>

    <item name="widget 2__________">
        <widget>
            <layout>
                <layoutVBox>
                    <widgets>
                        <label text="Label 1 widget 2" /> 
                        <label text="Label 2 widget 2" /> 
                    </widgets>
                </layoutVBox>
            </layout>
        </widget>
    </item>

    <item name="widget 3">
        <widget>
            <layout>
                <layoutVBox>
                    <widgets>
                        <label text="Label 1 widget 3" /> 
                        <label text="Label 2 widget 3" /> 
                        <dataComboBox  read="hreg0" source="qtslavetcp" format="uint16">
                            <item text="On"     value="010"/>
                            <item text="Off"    value="011"/>
                            <item text="Reset"  value="012"/>
                            <item text="Test"   value="013"/>
                        </dataComboBox>

                        <dataComboBox  read="hreg0" source="qtslavetcp" format="hex" size="2">
                            <item text="On"        value="00_0 a"/>
                            <item text="Off"       value="00_0 b"/>
                            <item text="Reset"     value="00_0 c"/>
                            <item text="Test"      value="00_0 d"/>
                        </dataComboBox>

                        <dataComboLabel  read="coil0" source="qtslavetcp" format="bool">
                            <item text="Включен"        value="true"/>
                            <item text="Выключен"       value="false"/>
                        </dataComboLabel>

                        <dataComboLabel  read="hreg0" source="qtslavetcp" format="hex" size="2">
                            <item text="On"        value="a"/>
                            <item text="Off"       value="b"/>
                            <item text="Reset"     value="c"/>
                            <item text="Test"      value="d"/>
                        </dataComboLabel>
                    </widgets>
                </layoutVBox>
            </layout>
        </widget>
    </item>
</switchWidgetsList>
