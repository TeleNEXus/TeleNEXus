        <LayoutVBox>
          <widgets>

            <Button text = "write data" 
              style = "$(buttonCrazy) (...){color:green}"
              icon = "file='picture/icon1.png'; size=(150, 50)">

              <press delay="100">
                <controlScript scriptId="testlaunch1" scriptAction="launch(500)"/>
