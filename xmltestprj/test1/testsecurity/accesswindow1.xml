<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <Frame fixedSize="250;150">
      <layout>
        <LayoutVBox>

          <layouts>

            <LayoutHBox>
              <widgets>
                <Label text="Access:"/>
              </widgets>
              <stretch/>
              <widgets>
                <ComboBox 
                  data="localsource:security_access_id:string" 
                  style="(...){min-width: 100; max-width: 100}">
                  <item value="admin"/>
                  <item value="user"/>
                </ComboBox>
              </widgets>
            </LayoutHBox>

            <LayoutHBox>
              <widgets>
                <Label text="Password:"/>
              </widgets>

              <stretch/>

              <widgets>
                <LineEdit style="(...){min-width: 100; max-width: 100}"
                  echoMode="password"
                  dataWrite="localsource:security_password_stream:string" 
                  dataRead="localsource:empty_string:string"/>
              </widgets>
            </LayoutHBox>


            <LayoutHBox>
              <widgets>
                <Label text="Status:"/>
              </widgets>

              <stretch/>

              <widgets>
                <Label data="localsource:security_message:string"/>
              </widgets>
            </LayoutHBox>

          </layouts>

          <widgets>
            <Button text="Reset Access">
              <release>
                <writeData data="localsource:security_command_stream:string" value="reset"/>
              </release>
            </Button>
          </widgets>

          <!-- <stretch/> -->
        </LayoutVBox>
      </layout>
    </Frame>
  </mainWidget>
</WINDOW>

