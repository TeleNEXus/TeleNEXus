<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <Frame fixedSize="320;350" style="(...){background: lightblue }">
      <layout>
        <LayoutVBox spacing="15">

          <layouts>

            <LayoutHBox>
              <widgets>
                <Label text="Access:"/>
              </widgets>
              <stretch/>
              <widgets>
                <Label data="localsource:security_required_access_id:string" />
              </widgets>
            </LayoutHBox>


            <LayoutHBox>
              <widgets>
                <Label text="Password:"/>
              </widgets>

              <stretch/>

              <widgets>
                <LineEdit 
                  echoMode="password"
                  dataRead="localsource:security_keyboard_data:string" 
                  dataWrite="localsource:security_password_stream:string" 
                  style="(...){min-width: 100; max-width: 100; background: lightgreen; font: 18pt bold}"/>
              </widgets>
            </LayoutHBox>

            <LayoutHBox>
              <widgets>
                <Label text="Current access:"/>
              </widgets>
              <stretch/>
              <widgets>
                <Label data="localsource:security_current_access_id:string"/>
              </widgets>
            </LayoutHBox>

          </layouts>


          <stretch/>

          <layouts>
            <LayoutHBox>
              <widgets>

                <Button text="7" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="7"/>
                  </press>
                </Button>

                <Button text="8" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="8"/>
                  </press>
                </Button>

                <Button text="9" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="9"/>
                  </press>
                </Button>

              </widgets>

              <spacing value="40"/>
              <stretch/>

              <widgets>
                <Button text="X" fixedSize="40;40">
                  <release>
                    <controlWindow windowId="AccessKeyboard" action="hide"/>
                  </release>
                </Button>
              </widgets>

            </LayoutHBox>
          </layouts>


          <layouts>
            <LayoutHBox>
              <widgets>

                <Button text="4" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="4"/>
                  </press>
                </Button>

                <Button text="5" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="5"/>
                  </press>
                </Button>

                <Button text="6" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="6"/>
                  </press>
                </Button>

              </widgets>

              <spacing value="40"/>
              <stretch/>

              <widgets>

                <Button text="C" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="[Clear]"/>
                  </press>
                </Button>

                <Button text="⤎" fixedSize="40;40" style="(...){font:bold 24px}">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="[Backspace]"/>
                  </press>
                </Button>

              </widgets>

            </LayoutHBox>
          </layouts>



          <layouts>
            <LayoutHBox>
              <widgets>

                <Button text="1" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="1"/>
                  </press>
                </Button>

                <Button text="2" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="2"/>
                  </press>
                </Button>

                <Button text="3" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="3"/>
                  </press>
                </Button>

              </widgets>

              <stretch/>

            </LayoutHBox>
          </layouts>

          <layouts>
            <LayoutHBox>
              <widgets>

                <Button text="." fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="."/>
                  </press>
                </Button>

                <Button text="0" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="0"/>
                  </press>
                </Button>

                <Button text="-" fixedSize="40;40">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="-"/>
                  </press>
                </Button>

              </widgets>

              <stretch/>

              <widgets>

                <Button text="↵" fixedSize="95;40" style="(...){font: 24px}">
                  <press>
                    <writeData data="localsource:security_keyboard_stream:string" value="[Enter]"/>
                  </press>
                </Button>
              </widgets>
            </LayoutHBox>
          </layouts>

        </LayoutVBox>
      </layout>
    </Frame>
  </mainWidget>
</WINDOW>




