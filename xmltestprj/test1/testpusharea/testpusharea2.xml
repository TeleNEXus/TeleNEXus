<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <Frame>
      <widgets>

        <PushArea  position="100;100" fixedSize="100;100"
          style="(...){border: 2px solid green; background: grey}
          (...):focus{border: 10px solid yellow; padding: 10px}"
          >

          <events>
            <press delay="250">
              <controlScript scriptId="testlaunch1" scriptAction="launch(500)"/>
              <writeData data="localsource:test_string:string" value="PushLabel press"/>
            </press>

            <release>
              <controlScript scriptId="testlaunch1" scriptAction="stop"/>
              <writeData data="localsource:test_string:string" value="PushLabel release"/>
            </release>
          </events>

          <pressed movie="movies/20_21_22_23.gif" />
          <released picture="file=picture/picture_1.png; size=(100,100)" />
        </PushArea>

        <Label data="localsource:test_string:string"/>
        <Label text="localsource:test_string:string" position="30;30"/>

      </widgets>
    </Frame>
  </mainWidget>
</WINDOW>

