<?xml version="1.0" encoding="UTF-8" ?>

<WINDOW>
  <mainWidget>
    <Frame>
      <layout>
        <LayoutHBox>
          <widgets>

            <SplitterHorizontal
              style="(...)::handle { border: 3px solid green; background:red; height:8}"
              >
              <ListWidget 

                style="(...){
                color:yellow; background:blue; font: bold italic 16pt DejavuSansMono}"

                data="localsource:listwidgetitem:string">

              <item text="Label item 0" icon="file='picture/picture_1.png'; size(50,50)" matching="item0"/>
              <item text="Label item 1" icon="file='picture/picture_1.png'; size(50,50)" matching="item1"/>
              <item text="Label item 2" icon="file='picture/picture_1.png'; size(50,50)" matching="item2"/>
              <item text="Label item 3" icon="file='picture/picture_1.png'; size(50,50)" matching="item3"/>
              <item text="Label item 4" icon="file='picture/picture_1.png'; size(50,50)" matching="item4"/>
              <item text="Label item 5" icon="file='picture/picture_1.png'; size(50,50)" matching="item5"/>
              <item text="Label item 6" icon="file='picture/picture_1.png'; size(50,50)" matching="item6"/>
            </ListWidget>

            <StackWidget 

              style="(...){ max-width: 250; color:yellow; background:lightblue;}"
              data="localsource:listwidgetitem:string">

            <item matching="item0">
              <Label text="Widget item 0" />
            </item>

            <item matching="item1">
              <Label text="Widget item 1" />
            </item>

            <item matching="item2">
              <Label text="Widget item 2" />
            </item>

            <item matching="item3">
              <Label text="Widget item 3" />
            </item>

            <item matching="item4">
              <Label text="Widget item 4" />
            </item>

            <item matching="item5">
              <Label text="Widget item 5" />
            </item>

            <item matching="item6">
              <Label text="Widget item 6" />
            </item>

          </StackWidget>

          <Frame>

            <layout>
              <LayoutVBox>
                <widgets>
                  <DataLabel    data="localsource:listwidgetitem:string" />
                  <DataLineEdit data="localsource:listwidgetitem:string" />
                </widgets>
                <stretch/>
              </LayoutVBox>
            </layout>
          </Frame>
        </SplitterHorizontal>

      </widgets>

    </LayoutHBox>
  </layout>
</Frame>
</mainWidget>
</WINDOW>




